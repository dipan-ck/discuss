{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
  },
    "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
}